  "devDependencies": {
    "@types/jsonwebtoken": "8.3.6",
    "@types/node": "13.7.7",
    "@typescript-eslint/eslint-plugin": "2.21.0",
    "@typescript-eslint/parser": "2.21.0",
    "concurrently": "5.1.0",
    "cross-env": "7.0.0",
    "eslint": "6.8.0",
