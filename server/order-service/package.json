{
  "name": "order-service",
  "description": "Order service",
  "displayName": "Fullstack TypeScript Shop: Order-Service",
  "author": {
    "name": "Mathias Haessig",
    "email": "cornholio127@live.com",
    "url": "https://github.com/cornholio127"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cornholio127/full-stack-typescript"
  },
  "version": "0.1.0",
  "private": false,
  "license": "Apache-2.0",
  "scripts": {
    "start": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "build": "npm run build-ts && npm run lint && npm run copy-static-assets",
    "serve": "node dist/server.js",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/server.js",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "gen-gql": "graphql-codegen && npm run copy-static-assets",
    "gen-db": "tsooq-gen"
  },
  "dependencies": {
    "@apollo/federation": "0.12.1",
    "apollo-server": "2.10.1",
    "big.js": "5.2.2",
    "graphql": "14.6.0",
    "log4js": "6.1.0",
    "pg": "7.18.2",
    "tsooq": "0.1.16"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.12.2",
    "@graphql-codegen/typescript": "1.12.2",
    "@graphql-codegen/typescript-resolvers": "1.12.2",
    "@types/big.js": "4.0.5",
    "@types/chai": "4.2.9",
    "@types/mocha": "7.0.1",
    "@types/node": "13.7.7",
    "@types/node-fetch": "2.5.5",
    "@types/pg": "7.14.1",
    "@types/shelljs": "0.8.6",
    "@types/sinon": "7.5.2",
    "@typescript-eslint/eslint-plugin": "2.21.0",
    "@typescript-eslint/parser": "2.21.0",
    "chai": "4.2.0",
    "concurrently": "5.1.0",
    "cross-env": "7.0.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-prettier": "3.1.2",
    "mocha": "7.1.0",
    "nodemon": "2.0.2",
    "prettier": "1.19.1",
    "shelljs": "0.8.3",
    "sinon": "9.0.0",
    "ts-node": "8.5.4",
    "tsooq-gen": "0.1.5",
    "typescript": "3.8.3"
  }
}
